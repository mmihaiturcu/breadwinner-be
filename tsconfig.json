{
    "compilerOptions": {
        "skipLibCheck": true,
        "sourceMap": true,
        "module": "ESNext",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "pretty": true,
        "target": "ESNext",
        "outDir": "dist",
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "paths": {
            "@/*": ["src/*"],
            "dbschema": ["./dbschema"]
        },
        "strict": true,
        "downlevelIteration": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/dbschema"]
}
